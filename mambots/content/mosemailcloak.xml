<?xml version="1.0" encoding="iso-8859-1"?>
<mosinstall version="4.5.2" type="mambot" group="content">
	<name>mosemailcloak</name>
	<author>Mambo Foundation</author>
	<creationDate>August 2004</creationDate>
	<copyright>copyright (C) 2000 - 2007 Mambo Foundation Inc.</copyright>
	<license>http://www.opensource.org/licenses/gpl-license.php GNU/GPL v.2</license>
	<authorEmail>core@mambo-foundation.org</authorEmail>
	<authorUrl>mambo-foundation.org</authorUrl>
	<version>4.5.2</version>
	<description>Cloaks all emails in content from spambots using javascript</description>
	<files>
		<filename mambot="mosemailcloak">mosemailcloak.php</filename>
	</files>
	<params>
		<param name="mode" type="list" default="1" label="Mode" description="Select how the emails will be displayed">
			<option value="0">Nonlinkable Text</option>
			<option value="1">As linkable mailto address</option>
		</param>
	</params>
</mosinstall>
